<table>
    <thead>
        <tr>
            <th>ORDERED ITEMS</th>
            <th>QUANTITY</th>
            <th>PRICE</th>
            <th>DELETE</th>
            
        </tr>
    </thead>
    <tbody>
       <ul class="navbar" style="list-style: none;">
            <li><a href="/admin">Admin</a></li>
           <li><a href="/">Home</a></li>
           <li><a href="/fruits">Fruits</a></li>
