        </ul>
        {{#each row1}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.quantity}}</td>
            <td>RS.{{this.cost}}</td>
            <td><a href="/remove/?name={{this.name}}"  class="clk">Delete_Item</a></td>
            
        </tr>
        {{/each}}
        {{#each row2}}
        <tr>
            <td></td>
            <td>TOTAL:{{this.cnt}}</td>
            <td>AMOUNT: {{this.cos}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
